mixin head(title, descripton, keywords)
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="description", content=descripton)
        meta(name="keywords", content=keywords)
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Sen:wght@700&display=swap", rel="stylesheet")
        link(rel="stylesheet", href="css/style.min.css")
        title=title 
mixin button(text, classes="")
    a(href="#", class="button " + classes)=text
mixin logo(href='/', img='@img/header/logo.svg', alt='Finsweet')
    a(href=href).logo #[img(src=img, alt=alt)]
mixin menu(items)
    ul.menu__list
        for item in items
            li.menu__item #[h6 #[a(href=item.href).menu__link #{item.text}]]
mixin burger()
    .burger
        span
mixin postsList(posts)
    .posts__list
        for post in posts
            +postsItem(post)
mixin postsItem(post)
    .posts__item 
        p.label.posts__label By #[a(href="#")=post.author]    l   #{post.date}
        h4.posts__name #[a(href="#")=post.name]